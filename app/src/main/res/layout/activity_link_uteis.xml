<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LinkUteisActivity">

    <TextView
        android:id="@+id/tv_titulo_tela_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textSize="18sp"
        android:text="Link Utéis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:ellipsize="end"
        android:clickable="true"
        android:drawableStart="@drawable/ic_seta_voltar"
        android:foreground="?android:attr/selectableItemBackground"
        android:fontFamily="@font/robotocondensedbold"/>

    <LinearLayout
        android:id="@+id/linear_layout_links"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo_tela_link"
        app:layout_constraintVertical_bias="0.308">

        <TextView
            android:id="@+id/tv_legenda_dicas_uteis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotocondensedbold"
            android:text="Acesse os conteúdos abaixo"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_dica_um"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/robotocondensedbold"
            android:linksClickable="true"
            android:text="Artigo 1"
            android:textAlignment="center"
            android:textColor="#58ACEF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_dica_dois"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/robotocondensedbold"
            android:linksClickable="true"
            android:text="Artigo 2"
            android:textAlignment="center"
            android:textColor="#58ACEF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_dica_tres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/robotocondensedbold"
            android:linksClickable="true"
            android:text="Artigo 3"
            android:textAlignment="center"
            android:textColor="#58ACEF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_dica_quatro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/robotocondensedbold"
            android:linksClickable="true"
            android:text="Artigo 4"
            android:textAlignment="center"
            android:textColor="#58ACEF"
            android:textSize="18sp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>